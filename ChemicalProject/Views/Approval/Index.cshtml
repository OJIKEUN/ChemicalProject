@{
    ViewData["Title"] = "ESH Appoval";
}
<style>
    table a:hover {
        text-decoration: underline;
        color: #0a8276;
    }
</style>
<link href="~/vendor/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" />
<link href="~/vendor/bootstrap-table/bootstrap-table-sticky-header.css" rel="stylesheet" />
<table id="table"
       data-toggle="table"
       data-sort-name="requestDate"
       data-sort-order="desc"
       data-locale="en-US"
       data-sticky-header="true"
       data-sticky-header-offset-y="60"
       data-detail-view="true"
       data-detail-formatter="detailFormatter"
       data-search="true"
       data-search-highlight="true"
       data-search-align="left"
       data-show-toggle="true"
       data-show-refresh="true"
       data-show-columns="true"
       data-show-loading="false"
       data-key-events="true"
       data-url="@Url.Action("GetData", "EshApproval")"
       data-pagination="true"
       data-page-size="50">
    <thead>
        <tr>
            <th data-field="requestDate" data-sortable="true">Request Date</th>
            <th data-field="typeOfGuest" data-sortable="true">Type of Guest</th>
            <th data-field="guestName" data-sortable="true">Name</th>
            <th data-field="companyBadge" data-sortable="true">Company Badge</th>
            <th data-field="companyName" data-sortable="true">Company</th>
            <th data-field="guestPurpose" data-sortable="true">Purpose</th>
            <th data-field="inductionLocation" data-sortable="true">Location</th>
            <th data-field="requestBy" data-sortable="true">Requestor</th>
            <th data-field="inductionDate" data-sortable="true">Induction Date</th>
            <th data-field="actions" data-formatter="actionFormatter" class="text-center no-space">Actions</th>

        </tr>
    </thead>
</table>

<div class="modal fade" id="approveModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 text-success">Approved Remark</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="approveForm">
                <div class="modal-body">
                    <input type="hidden" id="approveGuestId" name="id" />
                    <div class="form-group">
                        <label for="approveRemark">Remark:</label>
                        <textarea required class="form-control" id="approveRemark" name="eshApproveRemark"></textarea>
                    </div>
                    <div class="form-group form-check form-switch mb-0">
                        <input class="form-check-input" type="checkbox" role="switch" id="sendEmailApprove" checked>
                        <label class="form-check-label" style="margin-top:2px;" for="sendEmailApprove">Send Email</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary shadow btn-loading">Approve</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="rejectModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 text-danger">Rejected Remark</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="rejectForm">
                <div class="modal-body">
                    <input type="hidden" id="rejectGuestId" name="id" />
                    <div class="form-group">
                        <label for="rejectRemark">Remark:</label>
                        <textarea required class="form-control" id="rejectRemark" name="eshRejectRemark"></textarea>
                    </div>
                    <div class="form-group form-check form-switch mb-0">
                        <input class="form-check-input" type="checkbox" role="switch" id="sendEmailReject" checked>
                        <label class="form-check-label" style="margin-top:2px;" for="sendEmailReject">Send Email</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger shadow btn-loading">Reject</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/vendor/bootstrap-table/bootstrap-table.min.js"></script>
    <script src="~/vendor/bootstrap-table/bootstrap-table-sticky-header.min.js"></script>
    <script src="~/vendor/bootstrap-table/bootstrap-table-filter-control.min.js"></script>
    <script>
        function detailFormatter(index, row) {
            var html = [];
            if (row.lastUpdate) {
                html.push('<p class="text-danger">' + row.lastUpdate + '<hr class="my-2 mx-0">');
            }
            if (row.documentIdCard) {
                html.push('<p><b>ID Card: </b> <a href="@Url.Content("~/idcards/")' + row.documentIdCard + '" target="_blank">' + row.documentIdCard + '</a></p>');
            }
            if (row.documentSkck) {
                html.push('<p><b>SKCK: </b> <a href="@Url.Content("~/skcks/")' + row.documentSkck + '" target="_blank">' + row.documentSkck + '</a></p>');
            }
            if (row.documentMedicalLeter) {
                html.push('<p><b>Medical Letter: </b> <a href="@Url.Content("~/medicalletters/")' + row.documentMedicalLeter + '" target="_blank">' + row.documentMedicalLeter + '</a></p>');
            }
            if (row.documentPhoto) {
                html.push('<p><b>Photo: </b> <a href="@Url.Content("~/photos/")' + row.documentPhoto + '" target="_blank">' + row.documentPhoto + '</a></p>');
            }
            html.push('<p><b>Requested from Device: </b>' + row.requestorDevice + '</p><hr class="my-2 mx-0">');
            html.push('<a class="btn btn-sm btn-outline-primary" href="' + '@Url.Action("EditData", "EshApproval")' + '/' + row.id + '">Edit data</a>');

            return html.join('');
        }

        function actionFormatter(value, row, index) {
            return [
                '<button class="btn btn-success btn-sm approve-btn shadow" data-bs-toggle="modal" data-bs-target="#approveModal" data-id="' + row.id + '">Approve</button>',
                '<button class="btn btn-danger btn-sm reject-btn shadow" data-bs-toggle="modal" data-bs-target="#rejectModal" data-id="' + row.id + '">Reject</button>'
            ].join(' ');
        }

        window.actionEvents = {
            'click .approve-btn': function (e, value, row, index) {
                $('#approveGuestId').val(row.id);
                $('#approveModal').modal('show');
            },
            'click .reject-btn': function (e, value, row, index) {
                $('#rejectGuestId').val(row.id);
                $('#rejectModal').modal('show');
            }
        };

        // APPROVE
        $('#approveModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var guestId = button.data('id');
            $('#approveGuestId').val(guestId);
        });
        $('#approveModal').on('hide.bs.modal', function () {
            $('#approveRemark').val('');
            $('#sendEmailApprove').prop('checked', true);
            var $submitButton = $('#approveForm').find('button[type="submit"]');
            $submitButton.prop('disabled', false).text('Approve');
        });

        $('#approveForm').submit(function (e) {
            e.preventDefault();
            var $submitButton = $(this).find('button[type="submit"]');
            $submitButton.prop('disabled', true).text('This may take a while...');
            var guestId = $('#approveGuestId').val();
            var remark = $('#approveRemark').val();
            var sendEmail = $('#sendEmailApprove').is(':checked');
            $.ajax({
                url: '@Url.Action("ApproveGuest", "EshApproval")',
                type: 'POST',
                data: { id: guestId, eshApproveRemark: remark, sendEmail: sendEmail },
                success: function (result) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: result.message
                    });
                    $('#approveModal').modal('hide');
                    $('#approveRemark').val('');
                    $('#table').bootstrapTable('refresh');
                },
                error: function () {
                    console.log('Error approving guest.');
                }
            });
        });

        // REJECT
        $('#rejectModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var guestId = button.data('id');
            $('#rejectGuestId').val(guestId);
        });
        $('#rejectModal').on('hide.bs.modal', function () {
            $('#rejectRemark').val('');
            $('#sendEmailReject').prop('checked', true);
            var $submitButton = $('#rejectForm').find('button[type="submit"]');
            $submitButton.prop('disabled', false).text('Reject');
        });

        $('#rejectForm').submit(function (e) {
            e.preventDefault();
            var $submitButton = $(this).find('button[type="submit"]');
            $submitButton.prop('disabled', true).text('This may take a while...');
            var guestId = $('#rejectGuestId').val();
            var remark = $('#rejectRemark').val();
            var sendEmail = $('#sendEmailReject').is(':checked');

            $.ajax({
                url: '@Url.Action("RejectGuest", "EshApproval")',
                type: 'POST',
                data: { id: guestId, eshRejectRemark: remark, sendEmail: sendEmail },
                success: function (result) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: result.message
                    });
                    $('#rejectModal').modal('hide');
                    $('#rejectRemark').val('');
                    $('#table').bootstrapTable('refresh');
                },
                error: function () {
                    console.log('Error rejecting guest.');
                }
            });
        });
    </script>
}