@{
    ViewData["Title"] = "ESH Appoval";
}
<link href="~/vendor/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" />
<link href="~/vendor/bootstrap-table/bootstrap-table-sticky-header.css" rel="stylesheet" />

<div class="row gutters mt-4">
    <div class="card">
        <div class="card-header">biji utama</div>
        <hr class="m-0" />
        <div class="card-body">
            <a class="btn btn-primary " asp-action="Create">Add New Chemical</a>
            <table id="table"
                   data-toggle="table"
                   data-locale="en-US"
                   data-sticky-header="true"
                   data-sticky-header-offset-y="60"
                   data-search="true"
                   data-toolbar="#toolbar"
                   data-search-highlight="true"
                   data-search-align="right"
                   data-show-toggle="true"
                   data-show-refresh="true"
                   data-show-columns="true"
                   data-buttons="[]"
                   data-key-events="true"
                   data-url="@Url.Action("GetData", "Chemical_FALab")"
                   data-pagination="true"
                   data-page-size="50">


                <thead>
                    <tr>
                        <th data-field="badge" data-sortable="true">Badge</th>
                        <th data-field="chemicalName" data-sortable="true">Chemical Name</th>
                        <th data-field="brand" data-sortable="true">Brand</th>
                        <th data-field="packaging" data-sortable="true">Packaging</th>
                        <th data-field="unit" data-sortable="true">Unit</th>
                        <th data-field="price" data-sortable="true">Price</th>
                        <th data-field="minimumStock" data-sortable="true" data-width="150">Min Stock</th>
                        <th data-field="justify" data-sortable="true" data-width="150">Justify</th>
                        <th data-field="statusManager" data-sortable="true" data-formatter="statusFormatter" class="text-center">Status Manager</th>
                        <th data-field="statusESH" data-sortable="true" data-formatter="statusFormatter" class="text-center">Status ESH</th>
                        <th data-field="requestDate" data-sortable="true">Request Date</th>
                        <th data-formatter="viewFormatter" class="text-center no-space-three" data-width="180">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/vendor/bootstrap-table/bootstrap-table.min.js"></script>
    <script src="~/vendor/bootstrap-table/bootstrap-table-sticky-header.min.js"></script>
    <script src="~/vendor/bootstrap-table/bootstrap-table-filter-control.min.js"></script>
    <script>
        function statusFormatter(value, row, index) {
            let statusHtml;
            if (value === null) {
                statusHtml = '<span class="badge rounded-pill text-bg-secondary" style="line-height: 1; vertical-align: middle;">Waiting for Approval</span>';
            } else if (value === true) {
                statusHtml = '<span class="badge rounded-pill text-bg-success" style="line-height: 1; vertical-align: middle;">Approved</span>';
            } else {
                statusHtml = '<span class="badge rounded-pill text-bg-danger" style="line-height: 1; vertical-align: middle;">Rejected</span>';
            }
            return statusHtml;
        }

        function viewFormatter(value, row, index) {
            return `
                    <a href="@Url.Action("Index", "Records_FALab")?id=${row.id}" class="btn btn-primary btn-sm shadow">Index</a>
                    <a href="@Url.Action("Edit", "Chemical_FALab")?id=${row.id}" class="btn btn-info btn-sm shadow">Edit</a>
                    <a href="@Url.Action("Delete", "Chemical_FALab")?id=${row.id}" class="btn btn-danger btn-sm shadow">Delete</a>
                  `;
        }
    </script>
}
