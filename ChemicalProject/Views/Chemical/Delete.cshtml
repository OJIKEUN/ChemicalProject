@model ChemicalProject.Models.Chemical_FALab

@{
    ViewData["Title"] = "Delete";
}

<div class="row gutters mt-4">
    <div class="card-body">
        <div class="row gutters justify-content-center">
            <div class="col-lg-5 col-sm-6 col-12">
                <form asp-action="Delete" onsubmit="return confirmDelete()">
                    <div class="card m-0">
                        <div class="card-header">
                            <div class="card-title">Are you sure you want to delete this?</div>
                            <div class="card-sub-title">
                                Are you sure you want to delete this data? 
                                If this data is deleted, the data records in it will be permanently deleted.
                                This action cannot be undone!
                                If you are sure you want to delete, please type "DELETE".
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <textarea class="form-control" id="message" placeholder="" maxlength="140" rows="4"></textarea>
                            </div>
                            <input type="hidden" asp-for="Id" />
                            <a asp-action="Index" class="btn btn-secondary float-end" style="margin: 0 10px;">Back to List</a>
                            <input type="submit" value="Delete" class="btn btn-danger float-end" /> 
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete() {
        var confirmText = document.getElementById("message").value;
        if (confirmText.trim().toUpperCase() === "DELETE") {
            return true; // Mengizinkan form untuk disubmit
        } else {
            alert("Harap ketikkan 'DELETE' untuk mengonfirmasi penghapusan.");
            return false; // Mencegah form untuk disubmit
        }
    }
</script>


